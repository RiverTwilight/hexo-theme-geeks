<div class="index-cover">
    <%- config.title %>
</div>
<div>
    <% site.posts.forEach(function(post){ %>
    <div uk-scrollspy="cls:uk-animation-fade">

        <hr class="uk-divider-icon">

        <h2>
            <a class="uk-link-heading" href="<%- post.path %>">
                <%- post.title %>
            </a>
        </h2>
        <%- truncate(strip_html(post.content), { length: 200, omission: '...'}); %>
        <br>
        <a class="uk-align-right" href="<%- post.path %>">
            <button class="uk-button uk-button-primary uk-button-small">阅读全文<span
                    uk-icon="icon: chevron-right"></span></button>
        </a>
        <br>
    </div>
    <% }); %>
</div>